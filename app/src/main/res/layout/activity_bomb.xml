<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".PassTheBombActivity">

    <TextView
        android:id="@+id/minTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minimumTime" />

    <EditText
        android:id="@+id/minimumEntry"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/minTimeTitle"
        android:inputType="number"/>


    <TextView
        android:id="@+id/maxTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maxTimeTitle"
        android:layout_below="@id/minimumEntry"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/maximumEntry"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxTimeTitle"
        android:inputType="number"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/maximumEntry"
        android:layout_marginTop="39dp"
        android:text="@string/start"
        android:onClick="startTimer"/>

    <ImageView
        android:id="@+id/bombImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        app:srcCompat="@drawable/bomb" />


</RelativeLayout>